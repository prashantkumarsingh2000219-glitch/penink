<script>
const API_ENDPOINTS = {
    batchUpload: '/batch_upload',
    download: '/download',
    health: '/health'
};

// Batch file selection
document.getElementById('batchFiles').addEventListener('change', function () {
    if (this.files.length > 0) {
        const fileList = Array.from(this.files).slice(0, 5).map(f =>
            `<div class="file-item"><strong>${f.name}</strong></div>`
        ).join('');

        const extra = this.files.length > 5
            ? `<div class="file-item">...and ${this.files.length - 5} more</div>` : "";

        document.getElementById('batchFileInfo').innerHTML =
            `<strong>${this.files.length} Image selected:</strong>${fileList}${extra}`;
    }
});

// Batch processing
document.getElementById('processBatch').addEventListener('click', function () {
    const files = document.getElementById('batchFiles').files;

    if (files.length === 0) {
        showStatusMessage("Please select files first!", "error");
        return;
    }

    const formData = new FormData();
    Array.from(files).forEach(f => formData.append('files', f));

    showProgress();
    disableButtons();

    fetch(API_ENDPOINTS.batchUpload, {
        method: 'POST',
        body: formData
    })
    .then(res => res.json())
    .then(data => {
        hideProgress();
        enableButtons();

        if (!data.success) {
            showResult(`<h3>Error</h3>${data.error}`, "error");
            return;
        }

        let html = `
            <h3>Image Processing Complete</h3>
            <p>Total: ${data.total_files} | Success: ${data.successful_processing} | Failed: ${data.failed_processing}</p>
            <div>
        `;

        data.results.forEach(r => {
            html += `
                <div class="file-item">
                    <strong>${r.original_filename}</strong><br>
                    ${r.success
                        ? `<button class="btn btn-success" onclick="downloadProcessedFile('${r.processed_filename}')">Download</button>`
                        : `<span style="color:red;">Error: ${r.error}</span>`
                    }
                </div>`;
        });

        html += `</div>`;
        showResult(html, "success");
    })
    .catch(err => {
        hideProgress();
        enableButtons();
        showResult(`Network Error: ${err.message}`, "error");
    });
});

function showProgress() {
    document.getElementById('progress').style.display = "block";
    document.getElementById('progressBar').style.width = "70%";
}
function hideProgress() {
    document.getElementById('progress').style.display = "none";
}
function disableButtons() {
    document.getElementById('processBatch').disabled = true;
}
function enableButtons() {
    document.getElementById('processBatch').disabled = false;
}

function showResult(content, type) {
    const res = document.getElementById('result');
    res.innerHTML = content;
    res.className = `result ${type}`;
    res.style.display = "block";
}

function showStatusMessage(msg, type) {
    const status = document.getElementById('statusMessage');
    status.textContent = msg;
    status.className = `status-message status-${type}`;
    status.classList.remove('hidden');
}

function downloadProcessedFile(filename) {
    const url = `${API_ENDPOINTS.download}/${filename}`;
    const a = document.createElement('a');
    a.href = url;
    a.download = filename;
    a.click();
}

window.onload = () => {
    fetch(API_ENDPOINTS.health)
        .then(r => r.json())
        .then(() => {
            showStatusMessage("Server Connected ‚úîÔ∏è", "info");
            setTimeout(() => document.getElementById('statusMessage').classList.add('hidden'), 3000);
        })
        .catch(() => {
            showStatusMessage("Server Connection Failed ‚ùå", "error");
        });
};
</script>

